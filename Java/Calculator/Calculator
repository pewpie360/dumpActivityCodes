package learningJava;

public class Calculator
{
	
	public int sum = 0;
	
	public void addCalculator(int x, int y) 
	{	
		sum = x + y;
	}
	
	public void subtractCalculator(int x, int y) 
	{	
		sum = x - y;
	}
	
	public void multiplyCalculator(int x, int y) 
	{	
		sum = x * y;
	}
	
	public void divideCalculator(int x, int y) 
	{	
		sum = x / y;
	}
	
	public void remainderCalculator(int x, int y) 
	{	
		sum = x % y;
	}
	
	public int getSum() 
	{
		return sum;
	}
}
