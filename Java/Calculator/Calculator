package learningJava;

public class Calculator
{
	
	//Step 1: Create a instance variables
	
	private double x =  0;
	private double y = 0;
	private double sum = 0;
	
	//Step 2: Create a Constructor Method
	
	public void Calculator1(double x, double y) 
	{	
		 sum = x + y;
	}
	
	public void Calculator2(double x, double y) 
	{	
		sum = x - y;
	}
	
	public void Calculator3(double x, double y) 
	{		
		sum = x * y;
	}
	
	public void Calculator4(double x, double y) 
	{
		sum = x / y;
	}
	
	public void Calculator5(double x, double y) 
	{
		sum = x % y;
	}
	
	//Step 3: Create behavioral method
	
	public double getSum()
	{
		return sum;
	}
}
