package learningJava;
import java.util.Scanner;

public class Main
{
	public static void main(String[] args) 
	{

		//connect the classes altogether
		//apply scanner	
		//create 5 choices operator
		//Create firstNum and secondNum 5 repeated
		//pass the firstNum and secondNum to x and y in Calculator class file
		//pass the result to getSum
		//print it out
		
		Calculator myObject = new Calculator();
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Choose an operator: ");
		String choices = scan.nextLine();
		
		switch(choices)
		{
		
		case "+":
			System.out.println("Enter First Number: ");
			double firstNum1 = scan.nextDouble();
			
			System.out.println("Enter Second Number: ");
			double secondNum1 = scan.nextDouble();
			
			myObject.Calculator1(firstNum1, secondNum1);
			double result1 = myObject.getSum();
			
			System.out.println("Result: " + result1);
			break;
			
		case "-":
			System.out.println("Enter First Number: ");
			double firstNum2 = scan.nextDouble();
			
			System.out.println("Enter Second Number: ");
			double secondNum2 = scan.nextDouble();
			
			myObject.Calculator2(firstNum2, secondNum2);
			double result2 = myObject.getSum();
			
			System.out.println("Result: " + result2);
			break;
			
		case "*":
			System.out.println("Enter First Number: ");
			double firstNum3 = scan.nextDouble();
			
			System.out.println("Enter Second Number: ");
			double secondNum3 = scan.nextDouble();
			
			myObject.Calculator3(firstNum3, secondNum3);
			double result3 = myObject.getSum();
			
			System.out.println("Result: " + result3);
			break;
			
		case "/":
			System.out.println("Enter First Number: ");
			double firstNum4 = scan.nextDouble();
			
			System.out.println("Enter Second Number: ");
			double secondNum4 = scan.nextDouble();
			
			myObject.Calculator4(firstNum4, secondNum4);
			double result4 = myObject.getSum();
			
			System.out.println("Result: " + result4);
			break;
		
		case "%":	
			System.out.println("Enter First Number: ");
			double firstNum5 = scan.nextDouble();
			
			System.out.println("Enter Second Number: ");
			double secondNum5 = scan.nextDouble();
			
			myObject.Calculator5(firstNum5, secondNum5);
			double result5 = myObject.getSum();
			
			System.out.println("Result: " + result5);
			break;
			
		default:
			
			System.out.println("Invalid Choices \n Try Again");
		}
	}
}
