package main;

import java.util.Scanner;

public class Main {
	
	public static void main(String args[])
	  {
		
		Scanner sc = new Scanner(System.in);
		
		Practice myNumber = new Practice();
		
		System.out.println("Enter number");
		int n = sc.nextInt();
		System.out.println("Sum = " + myNumber.Calculate(n));
	  }
}


package main;

public class Practice{
	
	private int sum = 0;
	
	public int Calculate(int x) 
	{
		
		for(int i = 1; i <= x; i++ ) 
		{	
			sum += i;
		}
		return sum;
	}
}
	

