package practice;

public class Static {
	
	public static double Rectangle(double l, double w) {
		
		return l * w;
	}
	
	public static double Circle(double r) {

		return (Math.PI) * Math.pow(r, 2);
		
	}
	
	public static double Triangle(double b, double h) {
		
		return (0.50) * b * h;
	}
	
	public static double Square(int x) {
		
		return Math.pow(x, 2);
    
	}
}
