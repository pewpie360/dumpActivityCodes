package main;

public class Students{
	
	private double sum = 0;
	private double avg  = 0;
	private String input;
	
	
	
	//Calculate Average: Using getters and setters method
	public double getAverage() 
	{
		System.out.print("Average Grade:");
		return avg;
	}
	
	public void setAverage(double x) {

		sum += x;
		avg = sum  / 5;
	}
	
	//Show Information: Using static method inspired by Lodi Niel XD
	public static String StudentName(String name) {
		return "Hello " + name;
	}
	
	public String getInformation() {
		return input;
	}
	
	public void setInformation(String input, String a, String b, String c, String d, String e) {
	   
		input = a + b + c + d + e;
	}
}
