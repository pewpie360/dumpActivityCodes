package Practice;
import java.util.*;

public class Main {
	
	public static void main(String[] args) {
		
		Scanner sc  = new Scanner(System.in);
		
		System.out.print("Enter number: ");
		int num = sc.nextInt();
		sc.close();
		
		if((num % 2) == 0)
		{	
			System.out.println("The number " + num + " is even");
		}
		if((num % 2) == 1) 
		{
			System.out.println("The number " + num + " is odd");
		}
	}
}
